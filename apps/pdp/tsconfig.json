{
    "compilerOptions": {
        "outDir": "lib",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "strict": true,
        "sourceMap": true,
        "target": "ESNext",
        "paths": {
            "home/Header": [
                "./node_modules/@types/home/lib/"
            ],
            "home/Footer": [
                "./node_modules/@types/home/lib/"
            ]
        }
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ]
}